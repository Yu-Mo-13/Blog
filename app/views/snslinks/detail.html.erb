<div class="main">
    <div class="page-title">
        <h1>リンク詳細</h1>
    </div>
    <%= form_tag("/snslinks/update") do %>
        <div class="form-group">
            <p>アプリ名</p>
            <%= text_field_tag(:app, @snslink.app, class: "form-control") %>
        </div>
        <div class="form-group">
            <p>アカウント名</p>
            <%= text_field_tag(:account, @snslink.account, class: "form-control") %>
        </div>
        <div class="form-group">
            <p>URL</p>
            <%= text_field_tag(:url, @snslink.url, class: "form-control") %>
        </div>
        <div class="form-group">
            <%= submit_tag("更新", class: "btn btn-primary") %>
        </div>
    <% end %>
</div>
